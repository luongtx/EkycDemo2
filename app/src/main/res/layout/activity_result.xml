<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context=".ResultActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/verification_result"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_card_front"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/img_card_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/img_face"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/liveness_real_person"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="15sp" />


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

        <TableRow android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tvID"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tvName"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dob"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tvDOB"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addr"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tvAdd"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signAddr"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tvHKTT"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signDate"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/tvNDK"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />
        </TableRow>
    </TableLayout>


</LinearLayout>